@article{kawakatsuEmergenceHierarchyNetworked2021,
  title = {Emergence of Hierarchy in Networked Endorsement Dynamics},
  author = {Kawakatsu, Mari and Chodrow, Philip S. and Eikmeier, Nicole and Larremore, Daniel B.},
  year = {2021},
